---
export interface Props {
  rating: number;
  size?: 'small' | 'medium' | 'large';
}

const { rating, size = 'medium' } = Astro.props;

const sizeClasses = {
  small: 'w-4 h-4',
  medium: 'w-5 h-5',
  large: 'w-6 h-6'
};
---

<div class="flex text-yellow-400">
  {[...Array(5)].map((_, i) => (
    <svg 
      class={`${sizeClasses[size]} ${i < Math.floor(rating) ? 'fill-current' : 'stroke-current fill-none'}`}
      viewBox="0 0 24 24"
    >
      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
    </svg>
  ))}
</div>
