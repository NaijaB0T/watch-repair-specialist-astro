---
export const prerender = true;

import { ThemeProvider } from '@mui/material/styles';
import { CssBaseline } from '@mui/material';
import AnimatedBackground from '../components/react/AnimatedBackground';
import HomeContent from '../components/react/HomeContent';
import FloatingNavigation from '../components/react/FloatingNavigation';
import watchmakerTheme from '../theme/watchmakerTheme';
import specialistsData from '../data/specialists.json';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Chrono-Finder | Find Master Watch Repair Specialists</title>
    <meta name="description" content="Discover expert watch repair specialists across the United States. Find master horologists and certified watchmakers near you with Chrono-Finder's comprehensive directory." />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- SEO and Social -->
    <meta name="keywords" content="watch repair, horologist, timepiece restoration, luxury watch service, mechanical watch repair, vintage watch restoration" />
    <meta property="og:title" content="Chrono-Finder | Find Master Watch Repair Specialists" />
    <meta property="og:description" content="Discover expert watch repair specialists across the United States. Find master horologists and certified watchmakers near you." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://chrono-finder.com" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Chrono-Finder | Find Master Watch Repair Specialists" />
    <meta name="twitter:description" content="Discover expert watch repair specialists across the United States. Find master horologists and certified watchmakers near you." />
  </head>
  <body>
    <ThemeProvider theme={watchmakerTheme} client:only="react">
      <CssBaseline />
      
      <div style="min-height: 100vh; position: relative; overflow: hidden;">
        {/* Animated Background */}
        <AnimatedBackground client:only="react" />
        
        {/* Main Content */}
        <HomeContent specialists={specialistsData} client:only="react" />
        
        {/* Navigation */}
        <FloatingNavigation client:only="react" />
      </div>
    </ThemeProvider>
  </body>
</html>
