---
export const prerender = true;

import AnimatedBackground from '../components/AnimatedBackground.astro';
import FloatingNavigation from '../components/FloatingNavigation.astro';
import specialistsData from '../data/specialists.json';
import '../styles/global.css';

// Get some featured specialists for the homepage
const featuredSpecialists = Object.values(specialistsData)
  .filter(s => s && s.rating >= 4.5 && s.review_count >= 50)
  .sort((a, b) => b.rating - a.rating)
  .slice(0, 6);

function createSlug(name: string): string {
  return name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Chrono-Finder | Find Master Watch Repair Specialists</title>
    <meta name="description" content="Discover expert watch repair specialists across the United States. Find master horologists and certified watchmakers near you with Chrono-Finder's comprehensive directory." />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <AnimatedBackground />
    
    <main class="relative z-10 min-h-screen">
      <!-- Hero Section -->
      <section class="container mx-auto px-4 py-20 text-center">
        <h1 class="text-5xl md:text-7xl font-display mb-6">
          <span class="gradient-text">Chrono-Finder</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
          Your premier directory for finding master watch repair specialists and certified horologists across the United States
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/browse/1" class="btn-primary">
            Browse All Specialists
          </a>
          <a href="/about" class="btn-secondary">
            Learn More
          </a>
        </div>
      </section>
      
      <!-- Featured Specialists -->
      <section class="container mx-auto px-4 py-16">
        <h2 class="text-3xl md:text-4xl font-display text-center mb-12 gradient-text">
          Featured Watch Repair Specialists
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {featuredSpecialists.map((specialist) => (
            <div class="card p-6 transform hover:-translate-y-1 transition-all duration-300">
              <h3 class="text-xl font-display text-primary mb-3">
                {specialist.name}
              </h3>
              
              <div class="flex items-center mb-3">
                <div class="flex text-yellow-400">
                  {[...Array(5)].map((_, i) => (
                    <svg 
                      class={`w-5 h-5 ${i < Math.floor(specialist.rating) ? 'fill-current' : 'stroke-current fill-none'}`}
                      viewBox="0 0 24 24"
                    >
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  ))}
                </div>
                <span class="ml-2 text-gray-400">
                  {specialist.rating} ({specialist.review_count} reviews)
                </span>
              </div>
              
              {specialist.address && (
                <p class="text-gray-400 mb-4">
                  {specialist.address.city}, {specialist.address.state}
                </p>
              )}
              
              <a 
                href={`/specialist/${specialist.unique_id}/${createSlug(specialist.name)}`}
                class="btn-secondary block text-center"
              >
                View Profile
              </a>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a href="/browse/1" class="btn-primary">
            View All Specialists
          </a>
        </div>
      </section>
    </main>
    
    <FloatingNavigation />
  </body>
</html>
