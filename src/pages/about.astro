---
import { ThemeProvider } from '@mui/material/styles';
import { CssBaseline, Box } from '@mui/material';
import AnimatedBackground from '../components/react/AnimatedBackground';
import AboutContent from '../components/react/AboutContent';
import FloatingNavigation from '../components/react/FloatingNavigation';
import watchmakerTheme from '../theme/watchmakerTheme';
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>About Chrono-Finder | Premier Watch Repair Specialist Directory</title>
    <meta name="description" content="Learn about Chrono-Finder, the premier directory for finding master watch repair specialists and certified horologists across the United States." />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- SEO -->
    <meta name="keywords" content="about chrono-finder, watch repair directory, horologist network, timepiece restoration experts" />
    <meta property="og:title" content="About Chrono-Finder | Premier Watch Repair Specialist Directory" />
    <meta property="og:description" content="Learn about Chrono-Finder, the premier directory for finding master watch repair specialists and certified horologists." />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <ThemeProvider theme={watchmakerTheme} client:load>
      <CssBaseline />
      
      <div style="min-height: 100vh; position: relative;">
        <AnimatedBackground client:load />
        <AboutContent client:load />
        <FloatingNavigation client:load />
      </div>
    </ThemeProvider>
  </body>
</html>
