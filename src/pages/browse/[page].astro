---
export const prerender = true;

import { ThemeProvider } from '@mui/material/styles';
import { CssBaseline } from '@mui/material';
import AnimatedBackground from '../../components/react/AnimatedBackground';
import BrowseContent from '../../components/react/BrowseContent';
import FloatingNavigation from '../../components/react/FloatingNavigation';
import watchmakerTheme from '../../theme/watchmakerTheme';
import specialistsData from '../../data/specialists.json';
import '../../styles/global.css';

export async function getStaticPaths({ paginate }) {
  const specialists = Object.values(specialistsData);
  
  // Group specialists by state
  const specialistsByState = specialists.reduce((acc, specialist) => {
    // Skip specialists without address or state
    if (!specialist || !specialist.address || !specialist.address.state) {
      return acc;
    }
    
    const state = specialist.address.state;
    if (!acc[state]) {
      acc[state] = [];
    }
    acc[state].push(specialist);
    return acc;
  }, {});
  
  // Convert to array format for pagination
  const statesArray = Object.entries(specialistsByState).map(([state, specialists]) => ({
    state,
    specialists,
    count: specialists.length
  }));
  
  // Sort states alphabetically
  statesArray.sort((a, b) => a.state.localeCompare(b.state));
  
  // Paginate with 10 states per page
  return paginate(statesArray, {
    pageSize: 10
  });
}

const { page } = Astro.props;
const { data: states, currentPage, lastPage, url } = page;

// Create pagination URLs
const baseUrl = '/browse';
const prevUrl = currentPage > 1 ? (currentPage === 2 ? baseUrl : `${baseUrl}/${currentPage - 1}`) : null;
const nextUrl = currentPage < lastPage ? `${baseUrl}/${currentPage + 1}` : null;

// Convert back to object format for BrowseContent component
const specialistsByState = states.reduce((acc, { state, specialists }) => {
  acc[state] = specialists;
  return acc;
}, {});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Browse Watch Repair Specialists - Page {currentPage} | Chrono-Finder Directory</title>
    <meta name="description" content={`Browse our directory of master watch repair specialists and certified horologists. Page ${currentPage} of ${lastPage}. Find expert timepiece restoration services near you.`} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Roboto:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- SEO -->
    <meta name="keywords" content="watch repair directory, browse horologists, watchmaker listings, state watch repair, local timepiece restoration" />
    <meta property="og:title" content={`Browse Watch Repair Specialists - Page ${currentPage} | Chrono-Finder Directory`} />
    <meta property="og:description" content={`Browse our directory of master watch repair specialists and certified horologists. Page ${currentPage} of ${lastPage}.`} />
    <meta property="og:type" content="website" />
    
    <!-- Pagination links for SEO -->
    {prevUrl && <link rel="prev" href={prevUrl} />}
    {nextUrl && <link rel="next" href={nextUrl} />}
  </head>
  <body>
    <ThemeProvider theme={watchmakerTheme} client:load>
      <CssBaseline />
      
      <div style="min-height: 100vh; position: relative;">
        <AnimatedBackground client:load />
        <BrowseContent 
          specialistsByState={specialistsByState}
          currentPage={currentPage}
          totalPages={lastPage}
          prevUrl={prevUrl}
          nextUrl={nextUrl}
          client:load 
        />
        <FloatingNavigation client:load />
      </div>
    </ThemeProvider>
  </body>
</html>
